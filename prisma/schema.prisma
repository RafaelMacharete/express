generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())

  sessions  Session[]
}

model Session {
  id        String     @id @default(uuid())
  title     String
  createdAt DateTime   @default(now())
  userId    String
  user      User       @relation(fields: [userId], references: [id])

  responses Response[]
}

model Response {
  id         String   @id @default(uuid())
  question   String   // t√≠tulo do campo / label / placeholder
  answer     String   // valor respondido
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id])
}